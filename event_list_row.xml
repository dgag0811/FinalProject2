<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/islabel"
        android:src="@drawable/label_a"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TITLE"
        android:textStyle="bold"
        android:id="@+id/DisplayTitle"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/displayDiscription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/displayDiscription"
        android:layout_below="@+id/DisplayTitle"
        android:layout_toEndOf="@+id/islabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginRight="20dp"
        android:textColor="@color/dark_primary_color"
        android:text="Time"
        android:id="@+id/DisplayTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VENUE"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ATTENDEES"
        android:id="@+id/textView8"
        android:layout_below="@+id/isfav"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"

        android:id="@+id/displayVenue"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/DisplayAttendees" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/DisplayAttendees"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/displayDiscription"
        android:text="Medium Text" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/isfav"
        android:layout_alignTop="@+id/displayVenue"
        android:layout_alignEnd="@+id/DisplayTime"
        android:src="@drawable/fav_a" />


</RelativeLayout>